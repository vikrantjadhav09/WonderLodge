<% layout("/layouts/boilerplate") %>

    <div class="row mt-5">
        <h1 class="col-md-8 offset-md-2">Login</h1>

        <div class="col-md-8 offset-md-2">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <!-- User Name -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" class="form-control" placeholder="Enter your Username"
                        required>

                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" class="form-control" placeholder="Enter your Password"
                        required>
                </div>
                <button class="btn btn-success">Login</button>

            </form>
        </div>

    </div>